{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es6",
    "target": "es6",
    "strict": true,
    "strictNullChecks": false,
    "noEmitHelpers": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "paths": {
      "*": ["src/*"]
    },
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      "ES2018",
      "ES2018.Promise",
      "ES2019",
      "ES2022",
      "ES2023"
    ]
  },

 
  "include": [
    "./assets",
    "./src",
    "./engine",
    "typings.d.ts",
  ]
}